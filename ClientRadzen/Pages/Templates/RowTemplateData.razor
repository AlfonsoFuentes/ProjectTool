<RadzenRow JustifyContent="JustifyContent.SpaceBetween">
    <RadzenText TextStyle="TextStyle.Caption" TagName="TagName.H5"><b>@Label</b></RadzenText>
    <RadzenText TextStyle="TextStyle.Caption">@Value</RadzenText>
</RadzenRow>
@code {
    [Parameter]
    public string Label { get; set; } = string.Empty;
    [Parameter]
    public string Value { get; set; } = string.Empty;

}
