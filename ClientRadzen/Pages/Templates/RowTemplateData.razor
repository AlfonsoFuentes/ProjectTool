<RadzenRow JustifyContent="JustifyContent.SpaceBetween" >
    <RadzenText TextStyle="TextStyle.Caption" Style="@Style"><b>@Label</b></RadzenText>
    <RadzenText TextStyle="TextStyle.Caption" Style="@Style">@Value</RadzenText>
</RadzenRow>
    @code {
    [Parameter]
    public string Label { get; set; } = string.Empty;
    [Parameter]
    public string Value { get; set; } = string.Empty;

    [Parameter]
    public string Style { get; set; } = string.Empty;

}
