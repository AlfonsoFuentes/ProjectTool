@page "/UpdateSupplier/{Id:guid}"

<PageTitle>Update @SupplierName</PageTitle>Supplier

    <RadzenStack Orientation="Orientation.Vertical">
        <div>Update Supplier @SupplierName</div>
    <RadzenRow>

        <RadzenColumn SizeXS="8" SizeSM="4">
            <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Start" JustifyContent="JustifyContent.Normal">
                <RadzenTemplateForm TItem="UpdateSupplierRequest" Data="@Model">
                    <FluentValidationValidator @ref="_fluentValidationValidator" />

                    <RadzenFormField Text="Email" Style="width: 100%;">
                        <RadzenTextBox @bind-Value=@Model.ContactEmail AutoComplete=true AutoCompleteType="AutoCompleteType.Email" />

                    </RadzenFormField>
                    <ValidationMessage For="() => Model.ContactEmail" style="color:red; font-size:x-small;" />
                    <RadzenFormField Text="Contact Name" Style="width: 100%;">
                        <RadzenTextBox @bind-Value=@Model.ContactName AutoComplete=true AutoCompleteType="AutoCompleteType.Name" />

                    </RadzenFormField>
                    <RadzenFormField Text="Mobile" Style="width: 100%;">
                        <RadzenTextBox @bind-Value=@Model.PhoneNumber AutoComplete=true AutoCompleteType="AutoCompleteType.Tel" />

                    </RadzenFormField>
                    <RadzenFormField Text="Address" Style="width: 100%;">
                        <RadzenTextBox @bind-Value=@Model.Address />

                    </RadzenFormField>
                </RadzenTemplateForm>

            </RadzenStack>
        </RadzenColumn>
        <RadzenColumn SizeXS="8" SizeSM="4">
            <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Start" JustifyContent="JustifyContent.Normal">
                <RadzenTemplateForm TItem="UpdateSupplierRequest" Data="@Model">
                    <RadzenFormField Text="Name" Style="width: 100%;">
                        <RadzenTextBox Value=@Model.Name Disabled=true />

                    </RadzenFormField>
                    <RadzenFormField Text="Vendor Code" Style="width: 100%;">

                        <RadzenTextBox Value=@Model.VendorCode Disabled=true />
                    </RadzenFormField>
                    <RadzenFormField Text="Tax Code LD" Style="width: 100%;">

                        <RadzenTextBox Value=@Model.TaxCodeLD Disabled=true />
                    </RadzenFormField>
                    <RadzenFormField Text="Tax Code LP" Style="width: 100%;">

                        <RadzenTextBox Value=@Model.TaxCodeLP Disabled=true />
                    </RadzenFormField>
                    <RadzenFormField Text="Currency" Style="width: 100%;">

                        <RadzenTextBox Value=@Model.SupplierCurrency.Name Disabled=true />
                    </RadzenFormField>
                </RadzenTemplateForm>
            </RadzenStack>

        </RadzenColumn>

    </RadzenRow>
    <RadzenRow>
        <RadzenStack Orientation="Orientation.Horizontal">
            <RadzenButton ButtonStyle=ButtonStyle.Primary ButtonType=ButtonType.Submit Click="SaveAsync">Save</RadzenButton>
            <RadzenButton ButtonStyle=ButtonStyle.Primary Variant="Variant.Outlined" Click="CancelAsync">Cancel</RadzenButton>
        </RadzenStack>

    </RadzenRow>
</RadzenStack>

@code {
    async Task ChangeName(string name)
    {
        Model.Name = name;


    }
}



