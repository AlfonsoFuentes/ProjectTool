@page "/SupplierDatalist"

<RadzenStack Orientation="Orientation.Vertical">

    <RadzenRow>
        <RadzenColumn Size="12" SizeLG="8">
            <RadzenStack Orientation="Orientation.Horizontal">
                <RadzenButton Icon="add" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" Class="rz-mr-1 rz-ml-4"
                              MouseEnter="@(args =>MainApp.ShowTooltip(args,$"Add new Supplier",TooltipPosition.Top) )" Click="@(()=>AddNew())" />
               <RadzenButton Icon="description" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" Class="rz-mr-1 rz-ml-4"
                              MouseEnter="@(args =>MainApp.ShowTooltip(args,$"Export To Excel",TooltipPosition.Top) )" Click="@(()=>ExporToExcel())" />
            
            </RadzenStack>

        </RadzenColumn>
        <RadzenColumn Size="12" SizeLG="4">
            <RadzenTextBox Class="rz-ml-4" Style="width:100%;" Placeholder="Search..." @bind-Value="@nameFilter" @oninput=@((arg)=>nameFilter=arg.Value!.ToString()!)></RadzenTextBox>
        </RadzenColumn>
    </RadzenRow>

    <RadzenRow>
        @if(FilteredItems.Count()>0)
        {
            <RadzenColumn Size="12" SizeLG="12">
                <RadzenDataList AllowVirtualization=true Style="height:100%;overflow:auto;" PageSize=15
                                WrapItems="false" AllowPaging="false" Density="Density.Compact"
                                Data="@FilteredItems" TItem="SupplierResponse"
                                PagerHorizontalAlign="HorizontalAlign.Left" ShowPagingSummary="true">
                    <Template Context="product">
                        <RadzenCard Style="width: 100%; padding: 0;">
                            <RadzenRow Gap="0">
                                <RadzenColumn Size="12" SizeLG="3" Class="rz-p-2">
                                    <RowTemplateTitle Title="@(product.Name)"></RowTemplateTitle>

                                </RadzenColumn>
                                <RadzenColumn Size="12" SizeLG="7" Class="rz-p-2">
                                    <RadzenRow Gap="0">
                                        <RadzenColumn Size="12" SizeMD="6" SizeLG="3" Class="rz-ml-2 rz-mr-2">
                                            <RowTemplateData Label="Nick Name" Value="@product.NickName"></RowTemplateData>
                                            <RowTemplateData Label="Supplier Currency" Value="@product.SupplierCurrency.Name"></RowTemplateData>


                                        </RadzenColumn>
                                        <RadzenColumn Size="12" SizeMD="6" SizeLG="3" Class="rz-ml-2 rz-mr-2">
                                            <RowTemplateData Label="Vendor Code" Value="@product.VendorCode"></RowTemplateData>
                                            <RowTemplateData Label="Tax Code LD" Value="@product.TaxCodeLD"></RowTemplateData>
                                            <RowTemplateData Label="Tax Code LP" Value="@product.TaxCodeLP"></RowTemplateData>

                                        </RadzenColumn>

                                    </RadzenRow>
                                </RadzenColumn>
                                <RadzenColumn Size="12" SizeLG="2" Class="rz-p-2">
                                    <RadzenStack Orientation="Orientation.Horizontal">
                                        <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" class="rz-mr-1 rz-ml-2"
                                                      MouseEnter="@(args => MainApp.ShowTooltip(args,$"Edit",TooltipPosition.Left) )" Click="@(()=>EditByForm(product))" />
                                        <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" class="rz-ml-2"
                                                      MouseEnter="@(args => MainApp.ShowTooltip(args,$"Delete",TooltipPosition.Left) )" Click="@(()=>Delete(product))" />
                                    </RadzenStack>
                                </RadzenColumn>
                            </RadzenRow>
                        </RadzenCard>
                    </Template>

                </RadzenDataList>
            </RadzenColumn>
        }
        
    </RadzenRow>




</RadzenStack>

