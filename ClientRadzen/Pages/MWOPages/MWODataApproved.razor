
<RadzenColumn Size="12" SizeLG="3" Class="rz-p-2">
    <RowTemplateTitle Title="@(Data.Name)"></RowTemplateTitle>
</RadzenColumn>
<RadzenColumn Size="12" SizeLG="7" Class="rz-p-2">
    <RadzenRow>
        <RadzenColumn Size="12" SizeMD="6" SizeLG="4">
            <RowTemplateData Label="MWO Type" Value="@(Data.Type)"></RowTemplateData>
            <RowTemplateData Label="CEC Name" Value="@(Data.CECName)"></RowTemplateData>
            <RowTemplateData Label="Cost Center" Value="@(Data.CostCenter)"></RowTemplateData>


        </RadzenColumn>

        <RadzenColumn Size="12" SizeMD="6" SizeLG="4">
            <RowTemplateCurrency Label="Capital" Value="@Data.Capital"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Assigned Capital" Value="@Data.AssignedCapital"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Pending Capital" Value="@Data.PendingCapital"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Actual Capital" Value="@Data.ActualCapital"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Commitment Capital" Value="@Data.CommitmentCapital"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Potential Capital" Value="@Data.PotencialCapital"></RowTemplateCurrency>
           

        </RadzenColumn>
        @if (Data.HasAlterations)
        {
            <RadzenColumn Size="12" SizeMD="6" SizeLG="4">
                <RowTemplateCurrency Label="Expenses" Value="@Data.Expenses"></RowTemplateCurrency>
                <RowTemplateCurrency Label="Assigned Expenses" Value="@Data.AssignedExpenses"></RowTemplateCurrency>
                <RowTemplateCurrency Label="Pending Expenses" Value="@Data.PendingExpenses"></RowTemplateCurrency>
                <RowTemplateCurrency Label="Actual Expenses" Value="@Data.ActualExpenses"></RowTemplateCurrency>
                <RowTemplateCurrency Label="Commitment Expenses" Value="@Data.CommitmentExpenses"></RowTemplateCurrency>
                <RowTemplateCurrency Label="Potential Expenses" Value="@Data.PotencialExpenses"></RowTemplateCurrency>



            </RadzenColumn>
        }
    </RadzenRow>

</RadzenColumn>
<RadzenColumn Size="12" SizeLG="2" Class="rz-p-2">
    <RadzenStack Orientation="Orientation.Vertical">
        <RadzenRow>
            <RadzenButton Icon="format_list_bulleted" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" class="rz-mr-1"
                          Click="@(()=>DataMain.ShowApprovedItemsofMWO(Data))" MouseEnter="@(args => MainApp.ShowTooltip(args,$"Show Items for MWO: {Data.CECName}",TooltipPosition.Left) )" />
            
        </RadzenRow>

    </RadzenStack>
</RadzenColumn>


