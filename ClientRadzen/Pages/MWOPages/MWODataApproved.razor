
<RadzenColumn Size="12" SizeLG="3" Class="rz-p-2">
    <RowTemplateTitle Title="@(Data.Name)"></RowTemplateTitle>
</RadzenColumn>
<RadzenColumn Size="12" SizeLG="7" Class="rz-p-2">
    <RadzenRow>
        <RadzenColumn Size="12" SizeMD="6" SizeLG="4">
            <RowTemplateData Label="MWO Type" Value="@(Data.Type)"></RowTemplateData>
            <RowTemplateData Label="CEC Name" Value="@(Data.CECName)"></RowTemplateData>
            <RowTemplateData Label="Cost Center" Value="@(Data.CostCenter)"></RowTemplateData>


        </RadzenColumn>

        <RadzenColumn Size="12" SizeMD="6" SizeLG="4">
            <RowTemplateTitle Title="Capital Status"></RowTemplateTitle>
            <RowTemplateCurrency Label="Budget, USD" Value="@Data.Capital.BudgetUSD"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Assigned, USD" Value="@Data.Capital.AssignedUSD"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Pending, USD" Value="@Data.Capital.PendingToCommitUSD"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Actual, USD" Value="@Data.Capital.ActualUSD"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Commitment, USD" Value="@Data.Capital.CommitmentUSD"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Potential, USD" Value="@Data.Capital.PotentialCommitmentUSD"></RowTemplateCurrency>

        </RadzenColumn>
        @if (Data.HasExpenses)
        {

            <RadzenColumn Size="12" SizeMD="6" SizeLG="4">
                <RowTemplateTitle Title="Expenses Status"></RowTemplateTitle>
                <RowTemplateCurrency Label="Budget, USD" Value="@Data.Expenses.BudgetUSD"></RowTemplateCurrency>
                <RowTemplateCurrency Label="Assigned, USD" Value="@Data.Expenses.AssignedUSD"></RowTemplateCurrency>
                <RowTemplateCurrency Label="Pending, USD" Value="@Data.Expenses.PendingToCommitUSD"></RowTemplateCurrency>
                <RowTemplateCurrency Label="Actual, USD" Value="@Data.Expenses.ActualUSD"></RowTemplateCurrency>
                <RowTemplateCurrency Label="Commitment, USD" Value="@Data.Expenses.CommitmentUSD"></RowTemplateCurrency>
                <RowTemplateCurrency Label="Potential, USD" Value="@Data.Expenses.PotentialCommitmentUSD"></RowTemplateCurrency>

            </RadzenColumn>
        }
    </RadzenRow>

</RadzenColumn>
<RadzenColumn Size="12" SizeLG="2" Class="rz-p-2">
    <RadzenStack Orientation="Orientation.Vertical">
        <RadzenRow>
            <RadzenButton Icon="format_list_bulleted" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" class="rz-mr-1"
                          Click="@(()=>DataMain.ShowApprovedItemsofMWO(Data))" MouseEnter="@(args => MainApp.ShowTooltip(args,$"Show Items for MWO: {Data.CECName}",TooltipPosition.Left) )" />

            <RadzenButton Icon="remove_done" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" class="rz-mr-1"
                          Click="@(()=>DataMain.UnApproveMWO(Data))"
                          MouseEnter="@(args => MainApp.ShowTooltip(args,$"Un Approve MWO: {Data.CECName}",TooltipPosition.Left) )" />
            <RadzenButton Icon="insights" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" class="rz-mr-1"
                          Click="@(()=>DataMain.ShowSapAlignmentofMWO(Data))" MouseEnter="@(args => MainApp.ShowTooltip(args,$"Show SAP Alignment for MWO: {Data.CECName}",
                          TooltipPosition.Left) )" />

        </RadzenRow>

    </RadzenStack>
</RadzenColumn>


