
<RadzenColumn Size="12" SizeLG="3" Class="rz-p-2">
    <RowTemplateTitle Title="@(Data.Name)"></RowTemplateTitle>
  
</RadzenColumn>
<RadzenColumn Size="12" SizeLG="7" Class="rz-p-2">
    <RadzenRow>
        <RadzenColumn Size="12" SizeMD="6" SizeLG="4" class="rz-mr-1">

            <RowTemplateData Label="MWO Type" Value="@(Data.Type)"></RowTemplateData>
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6" SizeLG="4" class="rz-mr-1 rz-ml-1">
            <RowTemplateCurrency Label="Capital" Value="@Data.CapitalUSD"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Expenses" Value="@Data.ExpensesUSD"></RowTemplateCurrency>
            <RowTemplateCurrency Label="Apropiation" Value="@Data.AppropiationUSD"></RowTemplateCurrency>

        </RadzenColumn>

    </RadzenRow>

</RadzenColumn>
<RadzenColumn Size="12" SizeLG="2" Class="rz-p-2">
    <RadzenStack Orientation="Orientation.Vertical">
        <RadzenRow>
            <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" class="rz-mr-1" Click="@(()=>DataMain.EditByForm(Data))"
                          MouseEnter="@(args => MainApp.ShowTooltip(args,$"Edit MWO: {Data.Name}",TooltipPosition.Left) )" />
            <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" class="rz-ml-2" Click="@(()=>Delete(Data))"
                          MouseEnter="@(args => MainApp.ShowTooltip(args,$"Delete {Data.Name}",TooltipPosition.Left) )" />
           
        </RadzenRow>
        <RadzenRow>
            <RadzenButton Icon="verified" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" class="rz-mr-1"
                          Click="@(()=>Approve(Data))" MouseEnter="@(args => MainApp.ShowTooltip(args,$"Approve MWO: {Data.Name}",TooltipPosition.Left) )" />
            <RadzenButton Icon="new_label" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" class="rz-ml-2"
                          Click="@(()=>DataMain.AddItemToMWO(Data))" MouseEnter="@(args => MainApp.ShowTooltip(args,$"Add Item to MWO: {Data.Name}",TooltipPosition.Left) )" />
            <RadzenButton Icon="format_list_bulleted" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" class="rz-mr-1 rz-ml-2"
                          Click="@(()=>DataMain.ShowItemsofMWO(Data))" MouseEnter="@(args => MainApp.ShowTooltip(args,$"Show Items for MWO: {Data.Name}",TooltipPosition.Left) )" />

        </RadzenRow>
    </RadzenStack>
</RadzenColumn>


