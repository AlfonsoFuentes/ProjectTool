@page "/MWODataMain"

<RadzenStack Orientation="Orientation.Vertical">

    <RadzenRow>
        <RadzenColumn Size="12" SizeLG="8">
            <RadzenButton Icon="add" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Medium" Class="rz-ml-4 rz-mt-2" Click="@(()=>AddNew())"
                          MouseEnter="@(args =>MainApp.ShowTooltip(args,$"Add new MWO", TooltipPosition.Top) )" />

        </RadzenColumn>

        <RadzenColumn Size="12" SizeLG="4">
            <RadzenFormField Text="Search...." Style="width:100%;">
                <RadzenTextBox Placeholder="Search..." @bind-Value="@nameFilter" @oninput=@((arg)=>nameFilter=arg.Value!.ToString()!)></RadzenTextBox>
            </RadzenFormField>

        </RadzenColumn>
    </RadzenRow>

    <CascadingValue Value=this>
        <RadzenTabs TabPosition="TabPosition.Top" RenderMode="TabRenderMode.Server">
            <Tabs>
                <RadzenTabsItem Text="Created">
                    <MWODataListCreated></MWODataListCreated>
                </RadzenTabsItem>
                <RadzenTabsItem Text="Approved">
                    <MWODataListApproved></MWODataListApproved>
                </RadzenTabsItem>
                <RadzenTabsItem Text="Closed">
                </RadzenTabsItem>
            </Tabs>
        </RadzenTabs>

    </CascadingValue>






</RadzenStack>
