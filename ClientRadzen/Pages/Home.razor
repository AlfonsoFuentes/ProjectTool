@page "/"

<PageTitle>Home</PageTitle>
@if(CurrentUser.IsSuperAdmin)
{
    <RadzenRow class="rz-text-align-center rz-p-2" Gap="1rem">
        <RadzenColumn Size="12" SizeLG=4 class="rz-background-color-info-lighter rz-color-on-info-lighter rz-p-1">
            <RadzenCard Class="rz-my-0 rz-mx-0" Style="width: 100%; height:100%">
                <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.SpaceBetween">

                    <RadzenText TextStyle="TextStyle.Body1" class="rz-display-flex rz-mt-0 rz-my-0">Brands</RadzenText>
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0">
                        <RadzenButton Variant="Variant.Text" Icon="list" MouseEnter="@(args => ShowTooltip(args,$"View Brand List") )"
                            Click="@(()=>_NavigationManager.NavigateTo("/BrandDatalist"))" />
                        <RadzenButton Variant="Variant.Text" Icon="add" Click="@(()=>_NavigationManager.NavigateTo("/CreateBrand"))"
                                      MouseEnter="@(args => ShowTooltip(args,$"Add new Brand") )" />
                    </RadzenStack>
                </RadzenStack>

            </RadzenCard>
        </RadzenColumn>
       
        <RadzenColumn Size="12" SizeLG=4 class="rz-background-color-info-lighter rz-color-on-info-lighter rz-p-1">
            <RadzenCard Class="rz-my-0 rz-mx-0" Style="width: 100%; height:100%">
                <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.SpaceBetween">

                    <RadzenText TextStyle="TextStyle.Body1" class="rz-display-flex rz-mt-0 rz-my-0">Suppliers</RadzenText>
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0">
                        <RadzenButton Variant="Variant.Text" Icon="list" MouseEnter="@(args => ShowTooltip(args,$"View Supplier list") )"
                            Click="@(()=>_NavigationManager.NavigateTo("/SupplierDatalist"))" />
                        <RadzenButton Variant="Variant.Text" Icon="add" MouseEnter="@(args => ShowTooltip(args,$"Add new Supplier") )" 
                            Click="@(()=>_NavigationManager.NavigateTo("/CreateSupplier"))" />
                    </RadzenStack>
                </RadzenStack>

            </RadzenCard>
        </RadzenColumn>
        <RadzenColumn Size="12" SizeLG=4 class ="rz-background-color-info-lighter rz-color-on-info-lighter rz-p-1">
            <RadzenCard Class="rz-my-0 rz-mx-0" Style="width: 100%; height:100%">
                <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.SpaceBetween">
                    <RadzenText TextStyle="TextStyle.Body1" class="rz-display-flex rz-mt-0 rz-my-0">Users</RadzenText>
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0">
                        <RadzenButton Variant="Variant.Text" Icon="list" MouseEnter="@(args => ShowTooltip(args,$"View user list") )"
                                      Click="@(()=>_NavigationManager.NavigateTo("/UserDataList"))" />
                        <RadzenButton Variant="Variant.Text" Icon="add" MouseEnter="@(args => ShowTooltip(args,$"Add new user") )"
                                      Click="@(()=>_NavigationManager.NavigateTo("/register"))" />
                    </RadzenStack>
                </RadzenStack>

            </RadzenCard>
        </RadzenColumn>
    </RadzenRow>
}
<RadzenRow class="rz-text-align-center rz-p-2" Gap="1rem">
    <RadzenColumn Size="12" SizeLG=4 class ="rz-background-color-info-lighter rz-color-on-info-lighter rz-p-1">
        <RadzenCard Class="rz-my-0 rz-mx-0" Style="width: 100%; height:100%">
            <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.SpaceBetween">

                <RadzenText TextStyle="TextStyle.Body1" class="rz-display-flex rz-mt-0 rz-my-0">Mechanical Work orders</RadzenText>
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0">
                    <RadzenButton Variant="Variant.Text" Icon="list" MouseEnter="@(args => ShowTooltip(args,$"View MWOs list") )" 
                        Click="@(()=>_NavigationManager.NavigateTo("/MWODataMain"))" />
                    <RadzenButton Variant="Variant.Text" Icon="add" MouseEnter="@(args => ShowTooltip(args,$"Add new MWO") )"
                        Click="@(()=>_NavigationManager.NavigateTo("/CreateMWO"))" />
                </RadzenStack>
            </RadzenStack>

        </RadzenCard>
    </RadzenColumn>
    <RadzenColumn Size="12" SizeLG=4 class="rz-background-color-info-lighter rz-color-on-info-lighter rz-p-1">
        <RadzenCard Class="rz-my-0 rz-mx-0" Style="width: 100%; height:100%">
            <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.SpaceBetween">

                <RadzenText TextStyle="TextStyle.Body1" class="rz-display-flex rz-mt-0 rz-my-0">Purchase orders</RadzenText>
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0">
                    <RadzenButton Variant="Variant.Text" Icon="list" MouseEnter="@(args => ShowTooltip(args,$"View POs list") )" 
                        Click="@(()=>_NavigationManager.NavigateTo("/PurchaseOrdersDataList"))" />
                    <RadzenButton Variant="Variant.Text" Icon="add" MouseEnter="@(args => ShowTooltip(args,$"Add new PO") )" 
                        Click="@(()=>_NavigationManager.NavigateTo("/CreateSupplier"))" />
                </RadzenStack>
            </RadzenStack>

        </RadzenCard>
    </RadzenColumn>
    <RadzenColumn Size="12" SizeLG=4 class="rz-background-color-info-lighter rz-color-on-info-lighter rz-p-1">
        <RadzenCard Class="rz-my-0 rz-mx-0" Style="width: 100%; height:100%">
            <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.SpaceBetween">
                <RadzenText TextStyle="TextStyle.Body1" class="rz-display-flex rz-mt-0 rz-my-0">Cash Spending tool</RadzenText>
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0">
                    <RadzenButton Variant="Variant.Text" Icon="list" MouseEnter="@(args => ShowTooltip(args,$"View Cash spending tool") )" 
                        Click="@(()=>_NavigationManager.NavigateTo("/SupplierDatalist"))" />
                    
                </RadzenStack>
            </RadzenStack>

        </RadzenCard>
    </RadzenColumn>
</RadzenRow>

@code{
    void ShowTooltip(ElementReference elementReference, string text) =>
     TooltipService.Open(elementReference, text, new TooltipOptions() { Position = TooltipPosition.Right });
}